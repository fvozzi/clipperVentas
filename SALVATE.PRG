PRIVATE R_CLIENTE, R_FECHA, R_CBTE, R_VALOR, R_SALDO
SELECT 1
USE MCTACTE 
SELECT 2
USE MOVIVA INDEX MIV_CLA1
GO TOP
DO WHILE .NOT. EOF()
        R_CLIENTE = CLIENTE
        R_FECHA = FECHA
        R_CBTE = CBTE
        R_VALOR = NETO
        SELECT 1
        APPEND BLANK
        REPLACE CLIENTE WITH R_CLIENTE, FECHA WITH R_FECHA, CBTE WITH R_CBTE
        REPLACE TMOV WITH 1, VALOR WITH R_VALOR, SALDO WITH R_VALOR
        SELECT 2
        SKIP
ENDDO

