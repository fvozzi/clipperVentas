INDEX ON STR(VENDEDOR,3) + STR(YEAR(FECHA),4) + STR(MONTH(FECHA),2) + STR(DAY(FECHA),2) TO COM_CLA1
INDEX ON STR(YEAR(FECHA),4) + STR(MONTH(FECHA),2) + STR(DAY(FECHA),2) + RIGHT(CBTE,8) TO COM_CLA2
