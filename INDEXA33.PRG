CLOSE DATABASE
@ 16,21 CLEAR TO 16,59
@ 16,28 SAY "ARCHIVO DE MOV.CONTABLES"
USE MCONTABI
INDEX ON STR(NUMERO,4) + STR(YEAR(FECHA),4) + STR(MONTH(FECHA),2) + STR(DAY(FECHA),2) TO MCO_CLA1
